{
    "deploy.reloaded": {
        "targets": [
            {
                "type": "local",
                "name": "local",
                "dir": "./build/PHController",
                "mappings": {
                    
                    "settings/**": "/",
                    "devices/**": "/",
                    "menu/**": "/",
                }
            }
        ],

        "packages": [
            {
                "name": "all",
                "files": [
                    "settings/*",
                    "devices/*",
                    "menu/*",
                    "*.ino"
                ],
                "targets": ["local"]
            }
        ]
    },

    "files.exclude": {
        "build/": true
    }

}